{
  "name": "zrnet",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "devDependencies": {
    "@babel/code-frame": "^7.29.0",
    "concurrently": "^9.2.1",
    "wait-on": "^9.0.4"
  },
  "scripts": {
    "dev:api": "npm run dev --workspace backend",
    "dev:web": "wait-on http://127.0.0.1:4000/api/health && npm run dev --workspace frontend",
    "dev": "concurrently -n api,web -c blue,green \"npm run dev:api\" \"npm run dev:web\"",
    "lint": "npm run lint --workspace frontend",
    "test": "npm run test --workspace backend"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3"
  }
}
